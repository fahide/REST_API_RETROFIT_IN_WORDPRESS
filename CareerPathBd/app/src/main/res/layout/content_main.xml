<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <include layout="@layout/my_app_bar" android:id="@+id/main_app_bar"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <android.support.v7.widget.CardView
            android:id="@+id/dont"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="150dp"

            android:layout_margin="5dp">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/question"
                android:layout_marginTop="5dp"
                android:scaleType="centerCrop"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:text="আমার এখন কি \n    করা উচিৎ  ?"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:scaleType="centerCrop"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/reason10"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="150dp"
            android:layout_margin="5dp">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/signpost"
                android:layout_marginTop="5dp"
                android:scaleType="centerCrop"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:text="বিষয় ভিত্তিক\n    নির্দেশনা"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:scaleType="centerCrop"/>
        </android.support.v7.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <android.support.v7.widget.CardView
            android:id="@+id/video"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="150dp"

            android:layout_margin="5dp">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/presentation"
                android:layout_marginTop="5dp"
                android:scaleType="centerCrop"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:text="বর্তমান চাকুরি\n      বাজার "
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:scaleType="centerCrop"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/advice"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="150dp"
            android:layout_margin="5dp">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/educationcolor"
                android:layout_marginTop="5dp"
                android:scaleType="centerCrop"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:text="সফলদের পরামর্শ"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:scaleType="centerCrop"/>
        </android.support.v7.widget.CardView>


    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <android.support.v7.widget.CardView
                android:id="@+id/chakuri"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="150dp"

                android:layout_margin="5dp">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/job"
                    android:layout_marginTop="5dp"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:text="চাকুরি খুঁজুন "
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:scaleType="centerCrop"/>
            </android.support.v7.widget.CardView>



        </LinearLayout>
    </LinearLayout>
    </ScrollView>


</LinearLayout>